<style>
    /* Estilo general para centrar la página */
    main {
        max-width: 1200px;
        margin: 0 auto;
        text-align: center; /* Centra el contenido de texto */
    }

    /* Estilo para los contenedores de videos */
    .yutun {
        display: flex;
        justify-content: center; /* Centra los videos horizontalmente */
        gap: 1rem; /* Espacio entre los videos */
        flex-wrap: wrap; /* Permite que los elementos se ajusten en una nueva línea */
    }

    /* Estilo específico para dispositivos móviles */
    @media (max-width: 768px) {
        .yutun {
            flex-direction: column; /* Coloca los videos en una columna */
            align-items: center; /* Centra los videos */
            gap: 2rem; /* Aumenta el espacio entre los videos en móviles */
        }

        iframe {
            width: 100%; /* Asegura que los videos ocupen todo el ancho disponible */
            max-width: 360px; /* Limita el ancho máximo del video */
            height: auto; /* Ajusta la altura automáticamente */
        }
    }

    img {
        cursor: pointer;
    }

    /* Animaciones base */
    @keyframes float {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-10px);
        }
        100% {
            transform: translateY(0px);
        }
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
        100% {
            transform: scale(1);
        }
    }

    @keyframes shimmer {
        0% {
            background-position: -70%;
        }
        100% {
            background-position: 170%;
        }
    }

    /* Estilos mejorados para imágenes */
    .perfil {
        animation: float 6s ease-in-out infinite;
        transition: all 0.4s ease-in-out;
    }

    .perfil:hover {
        animation: pulse 1.5s ease-in-out infinite;
        filter: drop-shadow(0 0 2rem rgb(168, 85, 247));
    }

    .imagen-container {
        width: 250px;
        height: auto;
        overflow: hidden;
    }

    /* .imagen-container:hover {
            transform: translateY(-5px);
        }

        .imagen-hover,
        .imagen-hover-secondary {
            width: 250px;
            height: auto;
        }
        .imagen-container:hover .imagen-hover {
            opacity: 0;
            transform: scale(1.1);
        }

        .imagen-container:hover .imagen-hover-secondary {
            opacity: 1;
            transform: scale(1);
        } */
    /* Animación para el pepino */
    @keyframes bounce-rotate {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        25% {
            transform: translateY(-10px) rotate(10deg);
        }
        75% {
            transform: translateY(-5px) rotate(-10deg);
        }
    }

    #pepino {
        display: inline-block;
        animation: bounce-rotate 2s ease-in-out infinite;
        transform-origin: center;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    #pepino:hover {
        animation-play-state: paused;
        transform: scale(1.2);
    }

    /* Aseguramos que el contenedor de imágenes sea responsive */
    /* @media (max-width: 768px) {
            .imagen-container {
                width: 100%;
                height: 350px;
            }
        } */

    /* Efecto de título mejorado */
    #dotDager {
        background: linear-gradient(90deg, #7928ca, #2e0e4e, #7928ca);
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: shimmer 3s linear infinite;
        line-height: 1.2;
        padding-bottom: 2px;
    }

    /* Animaciones para View Transitions */
    ::view-transition-old(root),
    ::view-transition-new(root) {
        animation: none;
        mix-blend-mode: normal;
    }

    /* Animación para imágenes con transition:name */
    ::view-transition-old(profile),
    ::view-transition-new(profile),
    ::view-transition-old(cartonero),
    ::view-transition-new(cartonero),
    ::view-transition-old(gato),
    ::view-transition-new(gato),
    ::view-transition-old(barba),
    ::view-transition-new(barba) {
        animation: fade 0.5s ease-in-out;
    }

    @keyframes fade {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>
