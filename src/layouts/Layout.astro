---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "@fontsource-variable/onest";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link
			rel="icon"
			type="image/svg+xml"
			href="https://pbs.twimg.com/media/GdFSZ-IW4AAKrPo?format=png&name=small"
		/>
		<title>{title}</title>
	</head>
	<body>
		<!-- <div
			class="absolute inset-0 -z-10 h-full lg:w-full w-[540px] 
			items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_60%,#63e_100%)]"
		>
		</div> -->
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: ligth dark;
	}
	html {
		font-family: "Onest Variable", sans-serif;
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		background: #000;

		background-image: linear-gradient(
				to bottom,
				rgba(0, 0, 0, 0.8),
				rgba(0, 0, 0, 0.8)
			),
			url("../../public/FiverrPack/DangharTemplate_1732155419682.jpg");
		background-size: cover;
		background-attachment: fixed;
		background-position: center;
		background-repeat: no-repeat;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
